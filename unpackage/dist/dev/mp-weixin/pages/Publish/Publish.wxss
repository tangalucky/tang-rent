.publish-container .scrollview {
  height: calc(100vh - 152rpx);
  overflow: hidden;
}
.publish-container .scrollview .tip {
  background-color: #fdffd7;
  font-size: 28rpx;
  line-height: 65rpx;
  height: 65rpx;
  width: 100vw;
  padding-left: 15rpx;
  color: #606060;
}
.publish-container .scrollview .block {
  padding: 10rpx 10rpx;
  margin: 14rpx 12rpx;
}
.publish-container .scrollview .block .option label {
  margin-right: 18rpx;
}
.publish-container .scrollview .block input {
  background-color: #fafafa;
  width: 700rpx;
  height: 75rpx;
  border-radius: 10rpx;
}
.publish-container .scrollview .block.price input {
  width: 700rpx;
  display: inline-block;
}
.publish-container .scrollview .block textarea {
  background-color: #fafafa;
  border-radius: 10rpx;
  width: 700rpx;
  height: 240rpx;
  padding: 10rpx;
  margin: 10rpx 0 20rpx 0;
}
.publish-container .scrollview .block .key {
  font-weight: bold;
  margin: 8rpx 0;
  display: block;
}
.publish-container .scrollview .block .key text {
  color: firebrick;
}
.publish-container .scrollview .block picker {
  width: 270rpx;
  height: 70rpx;
  margin: 10rpx;
  line-height: 70rpx;
  color: #5a5a5a;
  padding-left: 10rpx;
  display: inline-block;
  background-color: #fafafa;
  border-radius: 10rpx;
  padding: 8rpx 20rpx;
}
.publish-container .scrollview .block checkbox,
.publish-container .scrollview .block radio {
  margin-left: 10rpx;
}
.publish-container .scrollview .block .photo-add {
  display: inline-block;
  background-color: #f5f5f5;
  color: dimgrey;
  height: 150rpx;
  width: 150rpx;
  margin: 10rpx 5rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 45rpx;
  overflow: hidden;
}
.publish-container .scrollview .block .photo-add ._img {
  height: 148rpx;
  width: 148rpx;
}
.publish-container .bottom-bar {
  background-color: transparent;
  height: 120rpx;
  width: 100vw;
  position: absolute;
  bottom: 0;
  line-height: 80rpx;
  padding: 30rpx 0;
  border-radius: 30rpx 30rpx 0 0;
}
.publish-container .bottom-bar .ask {
  color: #fff;
  font-weight: bold;
  background-color: #ad0914;
  box-shadow: 1px 1px 2px #d5d5d5;
  border-radius: 40rpx;
  width: 690rpx;
  text-align: center;
  margin: 10rpx auto;
  padding: 5rpx 10rpx;
}

