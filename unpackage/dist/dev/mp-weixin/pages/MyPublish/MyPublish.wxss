.mypub-container .nomsg {
  width: 750rpx;
  text-align: center;
  margin: 100rpx 0;
}
.mypub-container .house-item {
  width: 650rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 15rpx;
  margin: 0 auto;
  border: 2rpx solid #dcfff5;
}
.mypub-container .house-item .img {
  width: 250rpx;
  height: 190rpx;
  border-radius: 20rpx;
}
.mypub-container .house-item .info {
  width: 400rpx;
  padding-left: 10rpx;
}
.mypub-container .house-item .info .house-title {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mypub-container .house-item .info .house-title .method {
  font-weight: bold;
  color: #00966b;
  margin-right: 8rpx;
}
.mypub-container .house-item .info .desc {
  font-size: 28rpx;
  color: #6d6d6d;
  margin: 10rpx 0;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.mypub-container .house-item .info .option-list {
  margin: 8rpx 0;
}
.mypub-container .house-item .info .option-list .option-item {
  border: 2rpx solid #00966b;
  border-radius: 15rpx;
  padding: 3rpx 5rpx;
  margin: 0 5rpx;
  font-size: 26rpx;
}
.mypub-container .house-item .info .price {
  display: inline-block;
  margin-top: 10rpx;
  font-weight: bold;
  font-size: 34rpx;
  color: #ad0914;
}
.mypub-container .house-item .info .time {
  float: right;
  font-size: 26rpx;
  margin-top: 20rpx;
}

